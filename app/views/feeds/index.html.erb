<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>


    <% @feeds.each do |feed| %>

      <div class="feed">
        <%= feed.created_at.strftime("%Y-%m-%d %H:%M") %>
        <br><br>
        <%= "User:    #{feed.user.name}   " %>
        <br>
        <%= image_tag feed.image.url %>
        <br>
          <%= "Content:   #{feed.content}" %>
        <br><br>
        <%= link_to 'Show', feed ,class: 'btn btn-primary' %>
        <% if current_user.id == feed[:user_id] %>
          <%= link_to 'Edit', edit_feed_path(feed) ,class: 'btn btn-primary' %>
          <%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-primary' %>
        <% end %>

      </div>
        <br><br><br>
    <% end %>


